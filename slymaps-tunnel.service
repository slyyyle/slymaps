[Unit]
Description=Cloudflare Tunnel for slymaps.io
After=network.target

[Service]
Type=simple
User=slyle
WorkingDirectory=/home/slyle/Projects/slymaps
ExecStart=/usr/bin/cloudflared tunnel --config /home/slyle/Projects/slymaps/slymaps.yml run
Restart=always
RestartSec=5
KillMode=mixed
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target 